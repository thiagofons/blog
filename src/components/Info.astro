---
// Imports
import { useTranslations } from "@i18n/utils";

// Props interface
interface Props {
    /** Language code (e.g., "en", "sl") */
    lang: string;
    /** Translation key for the message to display */
    message: string;
}

// Props
const { lang, message } = Astro.props as Props;

// Translations
const t = useTranslations(lang);
---

<p
    class="bg-primary/10 border-l-2 border-primary pl-4 py-2 text-primary font-medium mt-2"
>
    {t(message)}
</p>
